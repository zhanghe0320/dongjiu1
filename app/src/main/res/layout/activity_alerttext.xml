<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="240dp"
    android:background="@drawable/shape_lay"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textviewTitle3"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="center_horizontal|center"
        android:text="地址"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textviewTitle"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:background="#FFFFFF"

            android:gravity="center_vertical|end"
            android:text="地址"
            android:textColor="#000000"

            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editInputName"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:background="#FFFFFF"

            android:gravity="center|end"
            android:text="地址"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editInputPwd"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="text"
            android:labelFor="@id/editInputPwd"
            android:maxLines="1"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:targetApi="o" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_lay"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCancle"
            style="?android:attr/buttonStyle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_b_l"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPwdOK"
            style="?android:attr/buttonStyle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_b_r"
            android:text="确认"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#f5f5f5"
android:orientation="vertical"
android:weightSum="10"
tools:context=".activity.SystemActivity"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#f5f5f5"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/loginsystem"
        android:textColor="#71c1ff"

        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#f5f5f5"

        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/main_new"
            android:clickable="true"
            android:focusable="true"
            android:onClick="updateapp">


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/main_address"
            android:clickable="true"
            android:focusable="true"
            android:onClick="internetInformationActivity">


        </RelativeLayout>

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="2"
    android:background="#f5f5f5"
    android:orientation="horizontal"
android:gravity="center"
    android:weightSum="2">

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_lay1"
        android:onClick="back_to_main"
        android:text="返回主界面">

    </Button>
</LinearLayout>


</LinearLayout>


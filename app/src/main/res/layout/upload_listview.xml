<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9.3"


        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="111111"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/tv_data1"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="10dp"

            android:background="@drawable/shape_lay"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bottom_lay">

                <LinearLayout

                    android:id="@+id/order_l"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/shape_lay"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:id="@+id/postorder"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@drawable/shape_lay"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/shape_lay"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@drawable/shape_lay"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/postordername"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_lay"
                                    android:text="发货单"
                                    android:textColor="@color/black"
                                    android:textSize="24sp" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.0"
                                android:orientation="horizontal">

                                <TextView

                                    android:id="@+id/postordernum"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="订单号:"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="6.0"
                                android:orientation="horizontal">

                                <TextView

                                    android:id="@+id/postordernum_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="243543453"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.0"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/postorderday"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="下单日期:"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="6.0"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/postorderday_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="2019-1-2"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/postorder_img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@id/postorder"
                        android:layout_weight="2"
                        android:background="@drawable/shape_lay"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/postorderimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"

                            android:background="@drawable/home_down_yes" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/order_l"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="2.6">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/order_l"
                            android:text="出库仓库:"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="7.4">

                        <TextView
                            android:id="@+id/postorder_warehouse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/order_l"
                            android:text="南京仓库"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="8"
                android:background="@drawable/bottom_lay"
                android:orientation="vertical"
                android:weightSum="10">


                <com.dongjiu.utils.CustomAdapter.InnerListview
                    android:id="@+id/order_list_item"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#FFFFFF"
                    android:divider="#00000000"
                    android:dividerHeight="18dp"></com.dongjiu.utils.CustomAdapter.InnerListview>

                <Button
                    android:id="@+id/order_list_mess"
                    style="?android:attr/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_lay1"
                    android:text="查看订单详情"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="3"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:text="订单:" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6">

                        <TextView
                            android:id="@+id/postorder_name"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="3"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:text="发货" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/postorder_woarhouse_num"
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:layout_weight="3"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:text="件数" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:text="发货:" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="8">

                        <TextView
                            android:id="@+id/postorder_num"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="3"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:text="已经扫码0件" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bottom_lay"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.6">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="收获组织:"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7.4">

                        <TextView
                            android:id="@+id/postorder_receive"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="南京"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.6">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="收获地址:"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7.4">

                        <TextView
                            android:id="@+id/postorder_receive_add"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="南京"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_lay"
                android:gravity="center"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"

                    android:layout_weight="4">

                    <Button
                        android:id="@+id/postorder_scan"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_lay1"
                        android:text="扫码发货"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"

                    android:layout_weight="4">

                    <Button
                        android:id="@+id/postorder_finish"
                        style="?android:attr/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_lay2"
                        android:text="扫码完成"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <CheckBox
            android:id="@+id/chb_select_way_point"
            style="@style/MyCheckBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>
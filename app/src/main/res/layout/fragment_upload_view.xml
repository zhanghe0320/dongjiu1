<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/uploadfragmentview"

    tools:context=".fragment.UploadFragmentView">

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/blue_white"
        android:textSize="18sp" />


    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#DDDDDD"
        android:descendantFocusability="blocksDescendants"
        android:divider="#00000000"
        android:dividerHeight="18dp"

        android:visibility="visible">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nochexbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/listview_check"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="全不选"
                android:translationZ="10dp" />

            <TextView
                android:id="@+id/allchexbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/listview_check"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="全选"
                android:translationZ="10dp" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/listview_check"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="上传订单"
                android:translationZ="10dp" />

            <TextView
                android:id="@+id/alldelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/listview_check"
                android:elevation="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="全部上传"
                android:translationZ="10dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>